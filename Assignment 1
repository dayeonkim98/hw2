function setup() {
  createCanvas(400, 400);
}

var x = 10;
var changeInX = 8;

function draw() {
  background(220);
	
  
  ellipse(x, 300, 100);
	fill(100)
	
	x = x + changeInX;
	
	if (x > width) {
    changeInX = -8;
  }
  if (x < 0) {
    changeInX = 4;
  }
	
	ellipse(80, x, 70);
	fill(10)
	
var z = 10;
var changeInZ = 4;
	
  z = z + changeInZ;
  
  if (z > width) {
    changeInZ = -4;
  }
  
  if (z < 0) {
    changeInZ = 4;
  }
}
