function setup() {
  createCanvas(400, 400);
}

var x = 10;
var changeInX = 8;

var z = 50;
var changeInZ = 15;

function draw() {
  background(220);
	
  
  ellipse(x, 300, 100);
	fill(100)
	
	x = x + changeInX;
	
	if (x > width) {
    changeInX = -8;
  }
  if (x < 0) {
    changeInX = 8;
  }
	
	ellipse(80, z, 70);
	fill(10)
	

	
  z = z + changeInZ;
  
  if (z > width) {
    changeInZ = -15;
  }
  
  if (z < 0) {
    changeInZ = 15;
  }
}
