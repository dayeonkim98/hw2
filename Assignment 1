function setup() {
  createCanvas(400, 400);
}

var x = 10;
var changeInX = 8;

function draw() {
  background(220);
	
  
  ellipse(x, 300, 100);
	fill(100)
	
	x = x + changeInX;
	
	if (x > width) {
    changeInX = -3;
  }
  if (x < 0) {
    changeInX = 3;
  }
	
	ellipse(x, 80, 70);
	fill(10)
	
  x = x + changeInX;
  
  if (x > width) {
    changeInX = -8;
  }
  
  if (x < 0) {
    changeInX = 8;
  }
}
